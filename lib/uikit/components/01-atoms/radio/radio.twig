{#
/**
 * @file
 * radio component.
 *
 * Variables:
 * - theme: [string] Theme: light, dark.
 * - content: [string] Input field label.
 * - value: [string] Input field value.
 * - disabled: [boolean] Disabled state.
 * - required: [boolean] Required state.
 * - has_error: [boolean] Error state.
 * - attributes: [string] Additional attributes.
 * - modifier_class: [string] Additional classes.
 */
#}

{% set disabled_class = disabled ? 'ct-radio--disabled' : '' %}
{% set required_class = required ? 'ct-radio--required' : '' %}
{% set error_class = has_error ? 'ct-radio--error' : '' %}
{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s %s %s %s'|format(theme_class, disabled_class, required_class, error_class, modifier_class|default('')) %}

<div class="ct-radio {{ modifier_class|trim }}">
  <input
    type="radio"
    class="ct-radio__element"
    value="{{ value }}"
    {{ disabled ? 'disabled' }}
    {{ required ? 'required' }}
    {% if attributes is not empty %}{{ attributes|raw }}{% endif %}
  />
  <span class="ct-radio__state"></span>
  {% if content is not empty %}
    <label class="ct-radio__label{{ disabled ? ' ct-radio__label--disabled' }}">{{ content }}</label>
  {% endif %}
</div>
