<div class="example-container">
  <div class="example-container__title">Unordered list</div>
  <div class="example-container__content">
    <ul>
      <li>List item 1</li>
      <li>List item 2</li>
      <li>List item 3</li>
      <li>List item 4</li>
      <li>List item 5</li>
