{#
/**
 * @file
 * Promo Card component.
 *
 * Variables:
 * - theme: [string] Theme: light, dark.
 * - content_top: [string] Content slot.
 * - image_over: [string] Content slot for image over.
 * - content_middle: [string] Content slot.
 * - content_bottom: [string] Content slot for bottom of Card.
 * - image: [object] Image data.
 * - title: [string] Card title.
 * - summary: [string] Card summary.
 * - date: [string] Date text.
 * - url: [string] URL for link out from Card
 * - is_external: [boolean] Link is external.
 * - modifier_class:[string] Additional classes.
 */
#}

{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set type_class = image is empty ? 'civic-promo-card--no-image' : '' %}
{% set image_over_class = image_over ? 'civic-promo-card--image-over' : '' %}
{% set modifier_class = '%s %s %s %s'|format(theme_class, type_class, image_over_class, modifier_class|default('')) %}

<div class="civic-promo-card {{ modifier_class }}">
  {% block image %}
    {% if image.src is not empty or image_over is not empty %}
      <div class="civic-promo-card__image-wrapper">
        {% include '@atoms/image/image.twig' with {
          theme: theme,
          src: image.src,
          alt:  image.alt,
        } only %}

        {% block image_over %}
          {% if image_over is not empty %}
            <div class="civic-promo-card__image-over">
              {{ image_over }}
            </div>
          {% endif %}
        {% endblock %}
      </div>
    {% endif %}
  {% endblock %}

  {% block content %}
    <div class="civic-promo-card__content">
      {% block content_top %}
        {% if content_top is not empty %}
          <div class="civic-promo-card__content_top">
            {{ content_top }}
          </div>
        {% endif %}
      {% endblock %}

      {% block date %}
        {% if date is not empty %}
          <div class="civic-promo-card__date">
            {{ date }}
          </div>
        {% endif %}
      {% endblock %}

      {% block title %}
        {% if title is not empty %}
          <div class="civic-promo-card__title">
            {% if url is not empty %}
            <a class="civic-promo-card__title-link" href="{{ url }}" {% if is_external %}title="Opens in new tab" target="_blank"{% endif %}>
            {% endif %}
              {{ title }}
            {% if url is not empty %}
            </a>
            {% endif %}
          </div>
        {% endif %}
      {% endblock %}

      {% block content_middle %}
        {% if content_middle is not empty %}
          <div class="civic-promo-card__content_middle">
            {{ content_middle }}
          </div>
        {% endif %}
      {% endblock %}

      {% block summary %}
        {% if summary is not empty %}
          <div class="civic-promo-card__summary">
            {{ summary }}
          </div>
        {% endif %}
      {% endblock %}

      {% block content_bottom_1 %}
        {% if tags or url %}
          <div class="civic-promo-card__bottom-wrapper">
            {% if tags %}
              <div class="civic-promo-card__tags">
                {% for tag in tags %}
                  {% include '@atoms/tag/tag.twig' with {
                    theme: theme,
                    text: tag,
                    is_alt: true,
                  } only %}
                {% endfor %}
              </div>
            {% endif %}
            {% if url %}
              {% if is_external %}
                {% include '@atoms/icon/icon.twig' with {
                  symbol: 'arrows_upperrightarrow',
                  color: 'primary',
                  modifier_class: 'civic-navigation-card__icon--external'
                } only %}
              {% else %}
                {% include '@atoms/icon/icon.twig' with {
                  symbol: 'arrows_rightarrow_3',
                  color: 'primary',
                  modifier_class: 'civic-navigation-card__icon--arrow',
                } only %}
              {% endif %}
            {% endif %}
          </div>
        {% endif %}
      {% endblock %}

      {% block content_bottom_2 %}
        {% if content_bottom is not empty %}
          <div class="civic-promo-card__content-bottom">
            {{ content_bottom }}
          </div>
        {% endif %}
      {% endblock %}
    </div>
  {% endblock %}
</div>
