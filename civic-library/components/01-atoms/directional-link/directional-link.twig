{#
/**
 * @file
 * Skip link component.
 *
 * Variables:
 * - theme: [string] theme: light, dark.
 * - url: [string] URL for the link button.
 * - text: [string] Link text.
 */
#}

{% set text = text|default('Top') %}
{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set disabled_class = is_disabled ? 'civic-directional-link--disabled': '' %}
{% set modifier_class = '%s %s %s'|format(theme_class, disabled_class, modifier_class) %}

{% set icons = {
  top: 'arrows_uparrow_1',
  bottom: 'arrows_downarrow_2',
  next: 'arrows_rightarrow_3',
  back: 'arrows_leftarrow_2',
} %}

<a class="civic-directional-link {{ modifier_class }}" role="link"{% if not is_disabled %} href="{{ url }}"{% endif %}{% if is_disabled %} aria-disabled="true"{% endif %}>
  {{ text }}
  {% if icons[direction] is defined %}
    {% include '@atoms/icon/icon.twig' with {
      symbol: icons[direction],
    } %}
  {% endif %}
</a>
