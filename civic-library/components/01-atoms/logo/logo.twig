{#
/**
 * @file
 * Logo component.
 *
 * Variables:
 * - theme: [string] theme: light, dark.
 * - logo: [array] Image object
 *    - link: [string] URL for the logo.
 *    - alt: [string] Image alt text.
 * - modifier_class: [string] Addiotional classes for the component.
 */
#}

{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class) %}

{% if logo.src is not empty %}
  <div class="civic-logo {{ modifier_class }}">
    {% include '@atoms/image/image.twig' with {
      src: logo.src,
      alt: logo.alt,
    } only %}
  </div>
{% endif %}
