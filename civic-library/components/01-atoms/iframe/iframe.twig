{#
/**
 * @file
 * Iframe component.
 *
 * Variables:
 * - url: [string] URL for the iframe src.
 * - width: [integer] Optional width of the iframe.
 * - height: [integer] Optional height of the iframe.
 * - modifier_class: [string] Additional classes.
 * - attributes: [string] Additional attributes.
 */
#}

{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class|default('')) %}

<iframe class="civic-iframe {{ modifier_class }}" {% if url %}src="{{ url }}"{% endif %} {% if width %}width="{{ width }}"{% endif %} {% if height %}height="{{ height }}"{% endif %} {% if attributes %}{{ attributes }}{% endif %}></iframe>
