{#
/**
 * @file
 * Content component: Single column edge-to-edge.
 *
 * Variables:
 * - content: [string] The content for this layout.
 * - modifier_class: [string] Additional classes.
 */
#}

{% if content %}
  <div class="civic-layout--single-column">
    {% block content %}
      <div class="civic-layout__content {{ modifier_class }}">
        {{ content }}
      </div>
    {% endblock %}
  </div>
{% endif %}
