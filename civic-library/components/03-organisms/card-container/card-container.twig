{#
/**
 * @file
 * Card Container component.
 *
 * Variables:
 * - theme: [string] Theme: light, dark.
 * - content_top: [string] Content slot.
 * - content_bottom: [string] Content slot.
 * - title: [string] Title text.
 * - cards: [array] Cards array.
 * - column_count: [number] Number of columns in the container.
 * - fill_width: [boolean] Stretch "hanging" cards to the full width of container or not.
 * - header_link_text: [string] Heading link text.
 * - header_link_url: [string] Heading link URL.
 * - footer_link_text: [string] Footer link text.
 * - footer_link_url: [string] Footer link URL.
 * - vertical_space: [string] With top, bottom or both vertical spaces.
 * - with_background: [boolean] With background or not.
 * - modifier_class: [string] Additional classes.
 */
#}

{% set vertical_space_class = vertical_space in ['top', 'bottom', 'both'] ? 'civic-card-container--vertical-space-%s'|format(vertical_space) : '' %}
{% set with_background_class = with_background ? 'civic-card-container--with-background' : '' %}
{% set column_class = 'col-xs-12 col-m-%s'|format(12 / column_count|default(1)) %}
{% set fill_width_class = fill_width ? 'civic-card-container--fill-width' : '' %}
{% set theme_class = 'civic-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s %s %s %s'|format(theme_class, fill_width_class, vertical_space_class, with_background_class, modifier_class|default('')) %}

{% if title is not empty or cards is not empty or content_top is not empty or content_bottom is not empty %}
  <div class="civic-card-container {{ modifier_class }}" aria-live="polite">
    <div class="container">
      <div class="row">
        <div class="col-m-12">
          {% block title %}
            {% if title is not empty or (header_link_url is not empty and header_link_text is not empty) %}
              <div class="civic-card-container__header">
                {% if title is not empty %}
                  <div class="civic-card-container__header-title">
                    {{ title }}
                  </div>
                {% endif %}

                {% if header_link_url is not empty and header_link_text is not empty %}
                  <div class="civic-card-container__header-link">
                    {% include '@atoms/link/link.twig' with {
                      theme: theme,
                      text: header_link_text,
                      url: header_link_url
                    } only %}
                  </div>
                {% endif %}
              </div>
            {% endif %}
          {% endblock %}

          {% block description %}
            {% if description is not empty %}
              <div class="civic-card-container__description">
                {{ description }}
              </div>
            {% endif %}
          {% endblock %}

          {% block content_top %}
            {% if content_top is not empty %}
              <div class="civic-card-container__content-top">
                {{ content_top }}
              </div>
            {% endif %}
          {% endblock %}

          {% block card_container %}
            {% if cards is not empty %}
              <div class="civic-card-container__cards">
                <div class="row">
                  {% for card in cards %}
                    {% if card is not empty %}
                      <div class="civic-card-container__card {{ column_class }}">
                        {{ card }}
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
            {% endif %}
          {% endblock %}

          {% block footer_link %}
            {% if footer_link_url is not empty and footer_link_text is not empty %}
              <div class="civic-card-container__footer">
                <div class="civic-card-container__footer-link">
                  {% include '@atoms/link/link.twig' with {
                    theme: theme,
                    text: footer_link_text,
                    url: footer_link_url
                  } only %}
                </div>
              </div>
            {% endif %}
          {% endblock %}

          {% block content_bottom %}
            {% if content_bottom is not empty %}
              <div class="civic-card-container__content-bottom">
                {{ content_bottom }}
              </div>
            {% endif %}
          {% endblock %}
        </div>
      </div>
    </div>
  </div>
{% endif %}
