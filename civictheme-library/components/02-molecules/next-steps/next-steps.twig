{#
/**
 * @file
 * Next Steps component.
 *
 * Variables:
 * - theme: [string] Theme: light, dark.
 * - content_top: [string] Content slot.
 * - content_bottom: [string] Content slot.
 * - title: [string] Title.
 * - summary: [string]  Summary.
 * - url: [string] Link.
 * - vertical_space: [string] With top, bottom or both vertical spaces.
 * - modifier_class: [string] Additional classes.
 */
#}

{% set vertical_space_class = vertical_space in ['top', 'bottom', 'both'] ? 'civictheme-next-steps--vertical-space-%s'|format(vertical_space) : '' %}
{% set theme_class = 'civictheme-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s %s'|format(theme_class, vertical_space_class, modifier_class|default('')) %}

{% if url is not empty %}
  <a class="civictheme-next-steps {{ modifier_class }}" href={{ url }}>
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <div class="civictheme-next-steps__content">
            {% block content_top %}
              {% if content_top is not empty %}
                <div class="civictheme-next-steps__content-top">
                  {{ content_top }}
                </div>
              {% endif %}
            {% endblock %}

            {% block content %}
              {% if title is not empty or summary is not empty %}
                <div class="civictheme-next-steps__text">
                  {% if title is not empty %}
                    <div class="civictheme-next-steps__title">
                      {{ title }}
                    </div>
                  {% endif %}
                  {% if summary is not empty %}
                    <div class="civictheme-next-steps__summary">
                      {{ summary }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            {% endblock %}

            {% block icon %}
              <div class="civictheme-next-steps__icon civictheme-next-steps__read-more">
                {% include '@atoms/icon/icon.twig' with {
                  symbol: 'arrows_rightarrow_3',
                  color: 'primary'
                } only %}
              </div>
            {% endblock %}

            {% block content_bottom %}
              {% if content_bottom is not empty %}
                <div class="civictheme-next-steps__content-bottom">
                  {{ content_bottom }}
                </div>
              {% endif %}
            {% endblock %}
          </div>
        </div>
      </div>
    </div>
  </a>
{% endif %}
